@using FTP_Client.HelperModels
@using System.Text.RegularExpressions
@model FileContent

@{
    Layout = null;
}

<div class="modal" tabindex="-1" role="dialog" id="defaultModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">File Viewer - @Model.FileName</h5>
                <button type="button" class="close" data-dismiss="#defaultModal" aria-label="Close" onclick='$("#defaultModal").modal("hide");'>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="save-file-msg" class="my-2">

                </div>

                <textarea rows="20" id="content" class="form-control">@(System.Text.Encoding.UTF8.GetString(Model.Content))</textarea>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" onclick="saveFile('@(Regex.Escape(Model.FullPath))')">Save</button>
                <button type="submit" class="btn btn-danger" onclick='$("#defaultModal").modal("hide");'>Close</button>
            </div>
        </div>
    </div>
</div>
