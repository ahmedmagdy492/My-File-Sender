@using FTP_Client.Models
@model List<Connection>

@{
    Layout = null;
}

<section style="height: 80vh">
    <div class="row mt-3">
    <div class="col-md-12">
        <button class="btn btn-primary" onclick="getNewConnectionPopup()">New Connection</button>
    </div>
</div>

<hr class="my-4">


@if (Model.Count == 0)
{
    <div class="d-flex justify-content-center mt-1">
        <h2>No Matches were Found</h2>
    </div>
}
else
{
    <div class="row mt-1">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mt-2">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between" id="card-@item.ID">
                            <h4 class="card-title">@item.ConnectionName - @item.IPAddress:@item.Port</h4>
                            <span title="Delete Connection" onclick="deleteConnection('@item.ID')">
                                <svg width="24" height="24" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                             viewBox="0 0 473 473" style="cursor: pointer;enable-background:new 0 0 473 473;" xml:space="preserve" fill="red">
                                <g>
                                <path d="M324.285,215.015V128h20V38h-98.384V0H132.669v38H34.285v90h20v305h161.523c23.578,24.635,56.766,40,93.477,40c71.368,0,129.43-58.062,129.43-129.43C438.715,277.276,388.612,222.474,324.285,215.015z M294.285,215.015c-18.052,2.093-34.982,7.911-50,16.669V128h50V215.015z M162.669,30h53.232v8h-53.232V30z M64.285,68h250v30h-250V68z M84.285,128h50v275h-50V128z M164.285,403V128h50v127.768c-21.356,23.089-34.429,53.946-34.429,87.802c0,21.411,5.231,41.622,14.475,59.43H164.285z M309.285,443c-54.826,0-99.429-44.604-99.429-99.43s44.604-99.429,99.429-99.429s99.43,44.604,99.43,99.429S364.111,443,309.285,443z" />
                                <polygon points="342.248,289.395 309.285,322.358 276.323,289.395 255.11,310.608 288.073,343.571 255.11,376.533 276.323,397.746309.285,364.783 342.248,397.746 363.461,376.533 330.498,343.571 363.461,310.608 	" />
                                                </g>
                                            </svg>
                            </span>
                        </div>
                        <div class="media">
                            <i class="ti-world icon-md text-info d-flex align-self-start me-3"></i>
                            <div class="media-body">
                                <p class="card-text">@item.LastConnectionDate</p>
                                <button class="btn btn-primary" onclick="getConnectPopup('@item.ID')">Connect</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
</section>