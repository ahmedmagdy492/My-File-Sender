<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My File Sender</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/toast.css" />

    <style>
        #profile-img {
            height: 40px;
            width: 40px;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <header>

            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand brand-logo" href="javascript:void(0);">
                        <img id="profile-img" class="rounded-circle profile-img-card" src="~/imgs/ftp.png" />
                    </a>
                    <a class="navbar-brand brand-logo" href='@Url.Action("Index", "Home")'>
                        My File Sender
                    </a>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    My Connections
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "DNSResolver")">
                                    Domain Name Resolver
                                </a>
                            </li>
                            <li class="nav-item" style="background: red!important">
                                <a class="nav-link" href="javascript:void(0);">
                                    Connect to Mobile <span class="badge badge-danger">Soon</span>
                                </a>
                            </li>
                        </ul>
                        <div class="d-flex">
                            <input class="form-control me-sm-2" type="text" placeholder="Search for Connections" id="search-input" onkeydown="onSearch(event)">
                            <button onclick="searchByName()" class="btn btn-secondary my-2 my-sm-0" type="button">Search</button>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                                        @User.Identity.Name
                                    </a>
                                    <div class="dropdown-menu" >
                                        <a class="dropdown-item" href="javascript:void(0);" onclick="signOut()">Log out</a>
                                    </div>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <div class="row m-2">
            <div class="col-m-12" id="search-result">
                @RenderBody()
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
    </div>

    <footer>
        <hr class="mt-4" />
        <div class="container my-3">
            All Rights Reserverd &copy; 2022. My File Sender - Ahmed Magdy
        </div>
    </footer>

    <div id="popupContainer">
    </div>

    <!-- partial -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/vendors/progressbar.js/progressbar.min.js"></script>

    <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/js/jquery.blockUI.min.js"></script>
    <script src="~/js/custom/PublicConfig.js"></script>
    <script src="~/js/custom/Public.js"></script>

    <script>
        function onSearch(e) {
            if(e.keyCode == 13) {
                searchByName();
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
